<window xmlns="http://jmix.io/schema/ui/window"
        caption="msg://io.jmix.securityui.screen.resourcepolicy/GraphQLResourcePolicyModelEdit.caption"
        focusComponent="form">
    <data>
        <instance id="resourcePolicyModelDc"
                  class="io.jmix.securityui.model.ResourcePolicyModel">
        </instance>
    </data>
    <dialogMode forceDialog="true"
                width="AUTO"
                height="AUTO"/>
    <layout spacing="true">
        <form id="form" dataContainer="resourcePolicyModelDc">
            <column width="350px">
                <textField id="resourceField" property="resource"/>
                <textField id="policyGroupField" property="policyGroup"/>
            </column>
        </form>
        <hbox id="editActions" spacing="true">
            <button action="windowCommitAndClose"/>
            <button action="windowClose"/>
        </hbox>
    </layout>
</window>
