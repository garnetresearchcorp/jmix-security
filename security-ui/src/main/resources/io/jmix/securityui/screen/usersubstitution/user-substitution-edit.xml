<window xmlns="http://jmix.io/schema/ui/window"
        caption="msg://UserSubstitutionEdit.caption"
        focusComponent="form">
    <data>
        <instance id="userSubstitutionDc"
                  class="io.jmix.securitydata.entity.UserSubstitution">
            <loader/>
        </instance>
    </data>
    <dialogMode height="300"
                width="600"/>
    <facets>
        <dataLoadCoordinator auto="true"/>
    </facets>
    <layout spacing="true" expand="form">
        <form id="form" dataContainer="userSubstitutionDc" width="100%">
            <column width="350px">
                <comboBox id="nameField" property="userName" editable="false" caption="msg://user"/>
                <comboBox id="substitutedNameField" property="substitutedUserName" caption="msg://substitutedUser"/>
                <dateField id="startDateField" property="startDate"/>
                <dateField id="endDateField" property="endDate"/>
            </column>
        </form>
        <hbox id="editActions" spacing="true">
            <button action="windowCommitAndClose"/>
            <button action="windowClose"/>
        </hbox>
    </layout>
</window>